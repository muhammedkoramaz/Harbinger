<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center">

        <io.armcha.elasticview.ElasticView
            android:id="@+id/item_connect_project"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="1.5dp"
            app:cardUseCompatPadding="true"
            app:flexibility="5">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_connect_project"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:contentDescription="@string/desc_add_icon"
                    android:padding="10dp"
                    android:progressDrawable="@drawable/pb_circular_determinative"
                    android:src="@drawable/ic_linked_project"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/main_color" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/dosis_medium"
                    android:text="@string/connect_project"
                    android:textAlignment="center"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </io.armcha.elasticview.ElasticView>

    </LinearLayout>
</layout>