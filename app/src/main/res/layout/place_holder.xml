<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp"
    android:gravity="center">

    <io.armcha.elasticview.ElasticView
        android:id="@+id/itemProject"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:padding="3dp">

            <ProgressBar
                android:id="@+id/pbProjectProgress"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:indeterminateOnly="false"
                android:padding="10dp"
                android:progressDrawable="@drawable/pb_circular_determinative"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/text_holder_one"
                android:layout_width="80dp"
                android:layout_height="6dp"
                android:layout_marginBottom="5dp"
                android:background="#FFDDDDDD"
                app:layout_constraintBottom_toTopOf="@+id/text_holder_two"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/text_holder_two"
                android:layout_width="60dp"
                android:layout_height="6dp"
                android:layout_marginBottom="5dp"
                android:background="#FFDDDDDD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </io.armcha.elasticview.ElasticView>

</LinearLayout>